<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        xmlns:views="clr-namespace:WpfApp4.Views"
        xmlns:vm="clr-namespace:WpfApp4.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="White">

    <Window.Resources>
        <!-- DataTemplates для навигации -->
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RegisterViewModel}">
            <views:RegisterView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MainContentViewModel}">
            <views:MainContentView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DoctorSpecializationViewModel}">
            <views:DoctorSpecializationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PatientAppointmentViewModel}">
            <views:PatientAppointmentView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DoctorScheduleViewModel}">
            <views:DoctorScheduleView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminScheduleViewModel}">
            <views:AdminScheduleView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>