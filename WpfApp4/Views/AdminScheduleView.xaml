<UserControl x:Class="WpfApp4.Views.AdminScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#3498DB" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding WelcomeMessage}" 
                           Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Обновить" Command="{Binding RefreshCommand}"
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"
                            Padding="15,8" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <Button Content="Назад" Command="{Binding BackCommand}"
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"
                            Padding="15,8" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Margin="10" Background="White">
            <TabItem Header="Управление записями">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Фильтр по дате -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Выберите дату:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" Margin="0,0,10,0"/>
                            <Button Content="Показать" Command="{Binding RefreshCommand}" Padding="10,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Список всех записей -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Appointments}" 
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              SelectedItem="{Binding SelectedAppointment}"
                              IsReadOnly="True" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пациент" Binding="{Binding Пациент.ПолноеИмя}" Width="120"/>
                            <DataGridTextColumn Header="Врач" Binding="{Binding Врач.Пользователь.ПолноеИмя}" Width="120"/>
                            <DataGridTextColumn Header="Специализация" Binding="{Binding Врач.Специализация.название}" Width="120"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding дата_записи, StringFormat='dd.MM.yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="Время" Binding="{Binding время_записи, StringFormat='hh\\:mm'}" Width="80"/>
                            <DataGridTextColumn Header="Симптомы" Binding="{Binding симптомы}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding статус}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding статус}" Value="запланирована">
                                                <Setter Property="Foreground" Value="#3498DB"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding статус}" Value="завершена">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding статус}" Value="отменена">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Диагноз" Binding="{Binding диагноз}" Width="150"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding дата_создания, StringFormat='dd.MM.yyyy HH:mm'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Управление записью -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="10" Margin="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Удалить запись" 
                                    Command="{Binding DeleteAppointmentCommand}"
                                    Background="#E74C3C" Foreground="White"
                                    Padding="15,8" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Управление расписанием">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Список расписания -->
                    <DataGrid Grid.Row="0" ItemsSource="{Binding Schedules}" 
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              SelectedItem="{Binding SelectedSchedule}"
                              IsReadOnly="True" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Врач" Binding="{Binding Врач.Пользователь.ПолноеИмя}" Width="150"/>
                            <DataGridTextColumn Header="День недели" Binding="{Binding день_недели}" Width="120"/>
                            <DataGridTextColumn Header="Начало" Binding="{Binding время_начала, StringFormat='hh\\:mm'}" Width="80"/>
                            <DataGridTextColumn Header="Окончание" Binding="{Binding время_окончания, StringFormat='hh\\:mm'}" Width="80"/>
                            <DataGridTextColumn Header="Перерыв с" Binding="{Binding перерыв_начала, StringFormat='hh\\:mm'}" Width="80"/>
                            <DataGridTextColumn Header="Перерыв по" Binding="{Binding перерыв_окончания, StringFormat='hh\\:mm'}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Активно" Binding="{Binding активен}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Форма добавления расписания -->
                    <Border Grid.Row="1" Background="#F8F9FA" Padding="15" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Врач" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Doctors}" 
                                          SelectedItem="{Binding SelectedDoctorForSchedule}"
                                          DisplayMemberPath="Пользователь.ПолноеИмя"
                                          Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="День недели" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding DaysOfWeek}" 
                                          SelectedItem="{Binding SelectedDayOfWeek}"
                                          Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Начало работы" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSchedule.время_начала, StringFormat='hh\\:mm'}" 
                                         Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                <TextBlock Text="Окончание работы" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSchedule.время_окончания, StringFormat='hh\\:mm'}" 
                                         Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" Margin="0,0,10,0">
                                <TextBlock Text="Перерыв с" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSchedule.перерыв_начала, StringFormat='hh\\:mm'}" 
                                         Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="5" Margin="0,0,10,0">
                                <TextBlock Text="Перерыв по" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSchedule.перерыв_окончания, StringFormat='hh\\:mm'}" 
                                         Padding="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="6" VerticalAlignment="Bottom">
                                <Button Content="Добавить расписание" 
                                        Command="{Binding AddScheduleCommand}"
                                        Background="#27AE60" Foreground="White"
                                        Padding="10,5" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Управление расписанием -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="10" Margin="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Удалить расписание" 
                                    Command="{Binding DeleteScheduleCommand}"
                                    Background="#E74C3C" Foreground="White"
                                    Padding="15,8" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#ECF0F1">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Записей на дату: "/>
                    <Run Text="{Binding Appointments.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" | Расписаний: "/>
                    <Run Text="{Binding Schedules.Count, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>