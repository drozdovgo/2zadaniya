<UserControl x:Class="WpfApp4.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="30" Background="#F8F9FA">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="👨‍⚕️" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                </StackPanel>

                <!-- Форма регистрации -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <!-- Имя и Фамилия -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Имя" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                            <TextBox x:Name="nameTB" Text="{Binding RegisterModel.FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Фамилия" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                            <TextBox x:Name="nameMB" Text="{Binding RegisterModel.LastName, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>
                    </Grid>

                    <!-- Email -->
                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <TextBox x:Name="Mail" Text="{Binding RegisterModel.Email, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Телефон -->
                    <TextBlock Text="Телефон" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <TextBox x:Name="Phone" Text="{Binding RegisterModel.Phone, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Дата рождения -->
                    <TextBlock x:Name="BD" Text="Дата рождения" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <DatePicker SelectedDate="{Binding RegisterModel.BirthDate}"
                                Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Роль -->
                    <TextBlock Text="Роль" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding RegisterModel.AvailableRoles}"
                              SelectedItem="{Binding RegisterModel.SelectedRole}"
                              Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <TextBox x:Name="Text" 
                             Text="{Binding RegisterModel.Password, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="Подтверждение пароля" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,15,0,5"/>
                    <TextBox x:Name="Text1" 
                             Text="{Binding RegisterModel.ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10" FontSize="14" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                    <!-- Сообщения -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" FontWeight="SemiBold" 
                               Margin="0,15,0,0" TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <TextBlock Text="{Binding SuccessMessage}" 
                               Foreground="Green" FontWeight="SemiBold" 
                               Margin="0,15,0,0" TextWrapping="Wrap"
                               Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Кнопка регистрации -->
                    <Button Content="Зарегистрироваться" 
                        Command="{Binding RegisterCommand}"
                        Background="#27AE60" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="14"
                        Padding="15,10" 
                        Margin="0,20,0,0" 
                        BorderThickness="0"
                            IsEnabled="{Binding RegisterModel.CanRegister}">

                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=nameTB, Path=Text.Length}"  Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=nameMB, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Mail, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Phone, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Text, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Text1, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- Нижняя панель -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Уже есть аккаунт? " Foreground="#7F8C8D"/>
                    <Button Content="Войти" 
                            Command="{Binding BackToLoginCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#3498DB"/>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>