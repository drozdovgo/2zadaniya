<UserControl x:Class="WpfApp4.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F7FA">
        <Border Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Padding="30"
                Width="350"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="👨‍⚕️" 
                          FontSize="40" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,10"/>

                <TextBlock Text="Медицинская клиника" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#2C3E50"
                          Margin="0,0,0,5"/>

                <TextBlock Text="Авторизация в системе" 
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Foreground="#7F8C8D"
                          Margin="0,0,0,30"/>

                <!-- Форма входа -->
                <StackPanel>
                    <!-- Email -->
                    <TextBlock Text="Email" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,5"/>

                    <TextBox Text="{Binding LoginModel.Email, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" 
                             Background="White" 
                             BorderBrush="#E0E0E0" 
                             BorderThickness="1"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,15,0,5"/>

                    <PasswordBox x:Name="PasswordBox" 
                                 Padding="10" 
                                 Background="White" 
                                 BorderBrush="#E0E0E0" 
                                 BorderThickness="1"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Запомнить меня -->
                    <CheckBox Content="Запомнить меня" 
                              IsChecked="{Binding LoginModel.RememberMe}"
                              Margin="0,15,0,0"/>

                    <!-- Сообщение об ошибке -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                              Foreground="Red" 
                              FontWeight="SemiBold" 
                              Margin="0,15,0,0" 
                              TextWrapping="Wrap"
                              Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Кнопка входа -->
                    <Button Content="ВОЙТИ В СИСТЕМУ" 
                            Command="{Binding LoginCommand}"
                            Background="#3498DB" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Padding="15,10"
                            BorderThickness="0"
                            Margin="0,20,0,10"/>
                </StackPanel>

                <!-- Нижняя панель -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Нет аккаунта? " Foreground="#7F8C8D"/>
                    <Button Content="Зарегистрироваться" 
                            Command="{Binding RegisterCommand}"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#3498DB"
                            Padding="5,2"/>

                    <TextBlock Text=" • " Foreground="#7F8C8D"/>
                    <Button Content="Проверить базу данных" 
                            Click="CheckDatabaseButton_Click"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#3498DB"
                            Padding="5,2"/>

                    <Button Content="Выйти" 
                            Command="{Binding CloseCommand}"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#3498DB"
                            Padding="5,2"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>