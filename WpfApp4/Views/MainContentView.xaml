<UserControl x:Class="WpfApp4.Views.MainContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#3498DB" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding WelcomeMessage}" 
                           Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Выйти" Command="{Binding LogoutCommand}"
                        Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"
                        Padding="15,8" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Панель управления с видимостью по ролям -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,10" HorizontalAlignment="Center">
            <Button Content="Обновить данные" Command="{Binding RefreshCommand}" 
                    Padding="10,5" Margin="5" Background="#7F8C8D" 
                    Foreground="White" FontWeight="Bold"/>

            <!-- Для всех пользователей -->
            <Button Content="Выбор врача по специализации" 
                    Command="{Binding ViewDoctorSpecializationsCommand}" 
                    Padding="10,5" Margin="5" Background="#3498DB" 
                    Foreground="White" FontWeight="Bold"/>

            <!-- Для пациентов -->
            <Button Content="Мои записи" 
                    Command="{Binding ViewPatientAppointmentsCommand}"
                    Padding="10,5" Margin="5" Background="#27AE60" 
                    Foreground="White" FontWeight="Bold"
                    Visibility="{Binding CurrentUser.роль, Converter={StaticResource RoleToPatientVisibilityConverter}}"/>

            <!-- Для врачей -->
            <Button Content="Мое расписание" 
                    Command="{Binding ViewDoctorScheduleCommand}"
                    Padding="10,5" Margin="5" Background="#9B59B6" 
                    Foreground="White" FontWeight="Bold"
                    Visibility="{Binding CurrentUser.роль, Converter={StaticResource RoleToDoctorVisibilityConverter}}"/>

            <!-- Для администраторов -->
            <Button Content="Управление записями" 
                    Command="{Binding ViewAdminScheduleCommand}"
                    Padding="10,5" Margin="5" Background="#E74C3C" 
                    Foreground="White" FontWeight="Bold"
                    Visibility="{Binding CurrentUser.роль, Converter={StaticResource RoleToAdminVisibilityConverter}}"/>
        </StackPanel>

        <!-- Список пользователей -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Users}" Margin="16">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" CornerRadius="8" 
                                Margin="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="{Binding роль, Converter={StaticResource RoleToIconConverter}}"
                                           FontSize="24" VerticalAlignment="Top" Margin="0,4,12,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding ПолноеИмя}" FontWeight="Bold" FontSize="14" Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding email}" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="Роль: " FontSize="11" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding роль}" FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Телефон: " FontSize="11" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding телефон}" FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Статус: " FontSize="11" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding активен, Converter={StaticResource BooleanToTextConverter}}" 
                                                   FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Дата регистрации: " FontSize="11" Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding дата_регистрации, StringFormat='dd.MM.yyyy'}" 
                                                   FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3" Background="#ECF0F1">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Всего администраторов и врачей: "/>
                    <Run Text="{Binding Users.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" | Ваша роль: "/>
                    <Run Text="{Binding CurrentUser.роль}" FontWeight="Bold"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>